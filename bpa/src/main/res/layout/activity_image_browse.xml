<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/shape_pro_loading_new"/>
    <!-- @drawable/shape_pro_loading -->

    <com.android.base.widget.CustomViewPager4Lock
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:src="@drawable/img_browse_more"/>
        <!-- 点切换形式 -->

        <LinearLayout
            android:id="@+id/view_dot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
        <!-- 分数形式 -->

        <TextView
            android:id="@+id/view_displaynum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal"
            android:visibility="gone"/>
    </RelativeLayout>

    <com.android.base.widget.TitleView
        android:id="@id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>